    "lint-staged": "^15.2.10",
    "lottie-web": "^5.12.2",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.5",
    "vitest": "^2.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
